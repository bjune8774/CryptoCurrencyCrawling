<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    tools:context="com.example.june.webcrawling.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_search_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Coin compare"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#FEFEFE"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <EditText
                android:id="@+id/toolbar_search_edit_text"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/toolbar_search_icon"
                android:layout_marginEnd="8dp"
                android:padding="3dp"
                android:textColor="#000000"
                android:background="#FEFEFE"/>
            <ImageView
                android:id="@+id/toolbar_search_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_search_black_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/content_recycler_view"
        android:layout_below="@+id/toolbar_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
